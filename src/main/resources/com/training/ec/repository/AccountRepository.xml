<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.training.ec.repository.AccountRepository">

  <!-- ResultMap -->
  <resultMap id="accountResultMap" type="com.training.ec.entity.Account">
    <id property="userId" column="user_id"/>
    <result property="userName" column="user_name"/>
    <result property="password" column="password"/>
    <association property="role" javaType="com.training.ec.entity.AccountRole">
      <id property="roleId" column="role_id"/>
      <result property="roleName" column="role_name"/>
    </association>
  </resultMap>

  <!-- SELECT -->
  <select id="selectByUserName" parameterType="String" resultMap="accountResultMap">
  SELECT 
    a.user_id,
    a.user_name,
    a.password,
    r.role_id,
    r.role_name
  FROM account a
  LEFT JOIN account_role r ON a.role_id = r.role_id
  WHERE a.user_name = #{userName}
</select>


</mapper>
